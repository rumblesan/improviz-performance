stroke(0, 200, 255)
noFill()
move(3, -2, 0)

func cycle(speed, delta, scale, &b)
	x = sin(time*speed) * scale
	y = sin(time*speed*delta) * scale
	move(x, y, 0)
		if (!isNull(b))
			b()

func sweep(amount, speed, offset, &b)
  offset := 1
  d = ((time * speed) % amount)
  arc = sin(d) * offset
  move(arc, d, 0)
    if (!isNull(b))
      b()

rotate(0, 0, 1)
5 times with i
  sweep((i + 0.001), 0.2, i * 2)
    10 times with j
      rotate(time/10)
      cycle(0.1, j, 2)
        cube(2)
